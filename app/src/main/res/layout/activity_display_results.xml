<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gauth.mad_loginscreen.DisplayResults">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="NAME"
        android:id="@+id/NAME" />

    <TextView
        android:text="EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NAME"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:id="@+id/EMAIL" />


    <TextView
        android:text="DEPARTMENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EMAIL"
        android:layout_alignStart="@+id/EMAIL"
        android:layout_marginTop="42dp"
        android:id="@+id/DEPARTMENT" />

    <TextView
        android:text="MOOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DEPARTMENT"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/MOOD" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/NAME"
        android:layout_marginStart="30dp"
        android:id="@+id/Name"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/EMAIL"
        android:layout_below="@+id/Name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/Email" />


    <TextView
        android:text="Department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/DEPARTMENT"
        android:layout_below="@+id/Email"
        android:layout_marginTop="39dp"
        android:layout_marginStart="10dp"
        android:id="@+id/Department" />

    <TextView
        android:text="Mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/MOOD"
        android:layout_below="@+id/Department"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:id="@+id/Mood" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:id="@+id/imageView"
        android:onClick="edit1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_alignTop="@+id/Email"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/imageView2"
        android:onClick="Edit2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_alignBottom="@+id/Department"
        android:layout_alignEnd="@+id/imageView2"
        android:id="@+id/imageView3"
        android:onClick="Edit3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/Mood"
        android:layout_marginTop="20dp"
        android:layout_marginStart="185dp"
        android:id="@+id/imageView4"
        android:onClick="Edit4" />
</RelativeLayout>
